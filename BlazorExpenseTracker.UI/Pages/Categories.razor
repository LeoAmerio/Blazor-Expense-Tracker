@page "/categories"

@using Model

<h3>Categories</h3>

@if(categories == null)
{
    <p><em>Loading...|</em></p>
} 
else
{
    <table class="table">
        <tbody>
            <tr>
                <td colspan="2"><a href="/category-detail">Add New</a></td>
            </tr>
        </tbody>
    </table>
    
    <table style="border: 1px solid black">
        <thead>
            <tr><th>Name</th></tr>
        </thead>
        <tbody>
            @foreach (var category in categories)
            {
                <tr>
                    <td style="border: 1px solid red">@category.Name</td>
                    <td><a href="/category-detail/@category.Id" ><i>Edit</i></a></td>
                </tr>
            }
        </tbody>
    </table>    
}

@code {
    private IEnumerable<Category> categories = new List<Category> {
        new Category { Id = 1, Name = "Shopping" },
        new Category { Id = 2, Name = "Fuel" }
    };
}
